<% @pizzas.each do |pizza|  %>
  <p>Name: <%= pizza.pretty_name %></p>
  <p>Order: <%= pizza.quantity %> x <%= pizza.topping %></p>
  <p><a href="/pizzas/<%= pizza.id %>">Show Order</a></p>
  <p><form method="post" action="/pizzas/<%= pizza.id %>/delete">
  <input type="submit" value="Delete order"/></form></p>
  <p><a href="/pizzas/<%= pizza.id %>/edit">Update order</a>

  <hr />

<% end %>